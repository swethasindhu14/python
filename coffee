for(int i=1;i<=x;i--)
  if (i==1):
      price=(price/p)*100;
      printf('price of the coffee',price);
      
  if (keepgoing=="y")
      
      if (i==2)
      price=(price/p)*100;
      printf('price of the coffee",price);
    if (i==3)
      price=(price/p)*100;
      printf('price of the coffee",price);
    if (i==4)
      printf("the coffee is free");
      price=(price/p)*100;
  printf('price of the coffee",price);
  printf("do you want to continue");
  scanf("%c"&keepgoing);
   return 0;     
}

